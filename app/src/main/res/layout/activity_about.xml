<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_all_processes"
        android:layout_width="match_parent"

        android:fontFamily="@font/monte"
        app:fontFamily="@font/monte"
        android:layout_height="wrap_content"
        android:text="Get all processes"/>

    <Button

        android:fontFamily="@font/monte"
        app:fontFamily="@font/monte"
        android:id="@+id/btn_running_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get running apps"/>

    <Button

        android:fontFamily="@font/monte"
        app:fontFamily="@font/monte"
        android:id="@+id/btn_foreground_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get foreground apps"/>

</LinearLayout>
